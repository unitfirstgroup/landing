<div class="flex flex-col gap-2 rounded-sm border border-white-action bg-gray-100 p-2 hover:bg-gray-300 dark:bg-gray-600 dark:border-dark-action dark:hover:bg-gray-700">
    <img src="@Image" class="mt-4 h-20 w-20 content-center items-center justify-center self-center text-center"/>
    <h2 class="font-sans text-2xl font-medium">@Name</h2>
    <h3 class="mb-6 text-sm">@Description</h3>
    <a href="@Url" class="justify-center py-2 text-white-action underline hover:animate-pulse dark:text-dark-action">
        <span>@UrlText</span>
    </a>
</div>

@code {

    [Parameter]
    public string Image { get; set; }

    [Parameter]
    public string Name { get; set; }

    [Parameter]
    public string Description { get; set; }

    [Parameter]
    public string Url { get; set; }

    [Parameter]
    public string UrlText { get; set; }

}