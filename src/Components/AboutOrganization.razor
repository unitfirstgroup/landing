<div class="flex flex-col py-8">
    <h1 class="items-center justify-center text-center font-sans text-4xl font-medium tracking-tight dark:text-white-main">
        @DataContext.Title
        <span class="text-white-action dark:text-dark-action">@DataContext.Organization</span>
    </h1>    
    <p class="self-center px-2 py-8 text-center text-lg leading-8 lg:p-12 lg:w-5/6">@DataContext.Main</p>
</div>

<div class="flex flex-col py-8">
    <h1 class="w-full self-center p-2 text-center text-2xl font-medium tracking-tight sm:text-4xl lg:p-12 lg:w-1/2">@DataContext.Mission</h1>
    <p class="self-center p-2 text-center text-lg leading-8 lg:p-12 lg:w-5/6">@DataContext.MissionDetails</p>
</div>

<Statistics Items="@DataContext.Statistics"></Statistics>

@code {

    [Parameter]
    public AboutOrganizationModel DataContext { get; set; }

}