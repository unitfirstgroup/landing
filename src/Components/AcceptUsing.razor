<div class="relative z-50 @Theme.HideTherms bg-gray-100"> 
    <div class="fixed bottom-0 left-0 w-full overflow-visible border-t border-gray-200 bg-white-main shadow">
        <div class="container mx-auto flex items-center justify-between px-4 py-2">
            <p class="text-sm text-gray-700">We use cookies to ensure you get the best experience on our website.
                Learn more <a href="https://unitfirst/license" class="text-blue-500">here</a>.</p>
            <div class="flex space-x-4">
                <button type="button"
                        @onclick="() => { AcceptCommand.Execute(null); }"
                        class="inline-flex h-10 w-auto min-w-24 items-center justify-center rounded-lg border border-white-action px-2.5 py-2.5 text-center text-sm text-sm font-medium text-white-action shadow-lg hover:text-white-main hover:bg-white-action focus:ring-4 focus:outline-none focus:ring-dark-action dark:text-dark-action dark:border-dark-action dark:text-dark-action dark:shadow-orange sm:px-2.5 hover:dark:bg-dark-action  dark:hover:bg-dark-action dark:focus:ring-dark-action">
                    Accept
                </button>
                <button type="button"
                        @onclick="() => { DeclineCommand.Execute(null); }"
                        class="inline-flex w-auto min-w-24 items-center justify-center rounded-lg border bg-gray-300 px-5 py-2.5 text-center text-sm font-medium shadow-lg focus:ring-4 focus:outline-none dark:bg-gray-300 sm:px-2.5">
                    Decline
                </button>
            </div>
        </div>
    </div>
</div>

@code
{
    [Parameter] public Theme Theme { get; set; }

    [Parameter] public IRelayCommand AcceptCommand { get; set; }

    [Parameter] public IRelayCommand DeclineCommand { get; set; }

    [Parameter] public string Hide { get; set; }
}
