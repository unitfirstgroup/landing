<div class="flex flex-col gap-2 rounded-sm border border-white-action bg-gray-100 p-2 hover:bg-gray-300 dark:bg-gray-600 dark:border-dark-action dark:hover:bg-gray-700">
    <img src="@Image" class="mt-4 h-20 w-20 content-center items-center justify-center self-center text-center"/>
    <h2 class="font-sans text-2xl font-medium text-black dark:text-white-main">@Name</h2>
    <h3 class="mb-6 text-sm text-black dark:text-white-main">@Description</h3>
</div>

@code {

    [Parameter]
    public string Image { get; set; } = "images/default.svg";

    [Parameter]
    public string Name { get; set; }

    [Parameter]
    public string Description { get; set; }

}