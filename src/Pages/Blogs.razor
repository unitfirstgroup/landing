@page "/blog"
@inherits MvvmComponentBase<BlogsViewModel>
<UIElementsContainer UiElementModel="@ViewModel.UiElementModel">
    <UserAccent AccentText="Valuable"
                Text="insights"
                Details="Find in applicable stories that can improve your business."
                ButtonClickCommand="@ViewModel.GetDetailsCommand"
                ButtonText="Get details">
    </UserAccent>
    <ItemsContainer TItem="BlogModel"
                    Items="@ViewModel.Model.Filtered"
                    Filter="@ViewModel.Model.Filter"
                    Context="context">
        <Blog Image="@context.Image"
              Tags="@context.Tags"
              Title="@context.Title"
              Author="@context.Author"
              AuthorImage="@context.AuthorImage"
              Date="@context.Date"
              Estimate="@context.Estimate">
        </Blog>
    </ItemsContainer>
</UIElementsContainer>