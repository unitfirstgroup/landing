@page "/base"
@inherits MvvmComponentBase<BaseCloneViewModel>
<UIElementsContainer UiElementModel="@ViewModel.UiElementModel">
    <UserAccent
        AccentText="Digital"
        Text="laboratories"
        Details="We’ve built expert knowledge in a range of industries. Search any kind of industry and find the best applicable laboratory."
        ButtonClickCommand="@ViewModel.GetDetailsCommand"
        ButtonText="Get details">
    </UserAccent>
    <ItemsContainer
        TItem="BaseModel"
        Items="@ViewModel.Model.Filtered"
        Filter="@ViewModel.Model.Filter"
        Context="context">
        <Card
            Name="@context.SearchValue">
        </Card>
    </ItemsContainer>
</UIElementsContainer>