@page "/laboratories"
@inherits MvvmComponentBase<LaboratoriesViewModel>
<UIElementsContainer UiElementModel="@ViewModel.UiElementModel">
    <UserAccent AccentText="Digital"
                Text="laboratories"
                Details="We’ve built expert knowledge in a range of industries. Search any kind of industry and find the best applicable laboratory."
                ButtonClickCommand="@ViewModel.GetDetailsCommand"
                ButtonText="Get details">
    </UserAccent>
    <ItemsContainer TItem="LaboratoryModel"
                    Items="@ViewModel.Model.Filtered"
                    Filter="@ViewModel.Model.Filter"
                    Context="laboratoryContext">
        <Card Name="@laboratoryContext.Name"
              Description="@laboratoryContext.Description"
              Image="@laboratoryContext.Image"
              Url="@laboratoryContext.Url"
              UrlText="@laboratoryContext.UrlText">
        </Card>
    </ItemsContainer>
</UIElementsContainer>