@page "/laboratories"
@inherits MvvmComponentBase<LaboratoriesViewModel>
<UIElementsContainer UiElementModel="@ViewModel.UiElementModel">
    <UserAccent
        AccentText=@ViewModel.Localizer["LABORATORIES_ACCENT_WORD"].Value
        Text=@ViewModel.Localizer["LABORATORIES_TITLE"].Value
        Details=@ViewModel.Localizer["LABORATORIES_DESC"].Value
        ButtonClickCommand="@ViewModel.GetDetailsCommand"
        ButtonText=@ViewModel.Localizer["LABORATORIES_GET_DETAILS"].Value>
    </UserAccent>
    <ItemsContainer
        TItem="LaboratoryModel"
        Items="@ViewModel.Model.Filtered"
        Filter="@ViewModel.Model.Filter"
        Context="context">
        <Card
            Name="@context.Name"
            Description="@context.Description"
            Image="@context.Image"
            Url="@context.Url"
            UrlText="@context.UrlText">
        </Card>
    </ItemsContainer>
</UIElementsContainer>